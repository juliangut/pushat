{
  "name": "juliangut/tify",
  "description": "Unified push notification services abstraction",
  "keywords": [
    "push",
    "notification",
    "GCM",
    "APNS",
    "abstraction"
  ],
  "homepage": "http://github.com/juliangut/tify",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/tify",
    "issues": "https://github.com/juliangut/tify/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.5",
    "symfony/polyfill-php56": "^1.0",
    "symfony/polyfill-php70": "^1.0",
    "symfony/options-resolver": "^2.7|^3.0",
    "zendframework/zendservice-apple-apns": "^1.1",
    "zendframework/zendservice-google-gcm": "^1.0",
    "doctrine/collections": "^1.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^1.0",
    "phpmd/phpmd": "^2.0",
    "phpunit/phpunit": "^4.5|^5.0",
    "sebastian/phpcpd": "^2.0",
    "squizlabs/php_codesniffer": "^2.0"
  },
  "suggest": {
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Tify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Tify\\Tests\\": "tests/Tify"
    }
  },
  "bin": [
  ],
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "phplint": "php -l src test",
    "phpcs": "phpcs --standard=PSR2 src tests",
    "phpcs-lint": "php-cs-fixer fix --dry-run --verbose",
    "phpcpd": "phpcpd src",
    "phpmd": "phpmd src text phpmd.xml",
    "phpunit": "phpunit",
    "phpunit-coverage": "phpunit --coverage-html build/coverage",
    "phpunit-clover": "phpunit --coverage-clover build/logs/clover.xml",
    "qa": "composer phplint & composer phpcs & composer phpcs-lint & composer phpcpd & composer phpmd",
    "fix": "php-cs-fixer fix --verbose",
    "security": "composer outdated",
    "test": "composer qa & composer phpunit"
  }
}
