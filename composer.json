{
  "name": "juliangut/tify",
  "description": "Unified push notification services abstraction",
  "keywords": [
    "push",
    "notification",
    "GCM",
    "APNS",
    "abstraction"
  ],
  "homepage": "http://github.com/juliangut/tify",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/tify",
    "issues": "https://github.com/juliangut/tify/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.5",
    "psr/log": "^1.0",
    "symfony/options-resolver": "^2.7|^3.0",
    "zendframework/zendservice-apple-apns": "^1.2",
    "zendframework/zendservice-google-gcm": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^1.0",
    "humbug/humbug": "~1.0@dev",
    "phpmetrics/phpmetrics": "^1.10",
    "phpmd/phpmd": "^2.0",
    "phpunit/phpunit": "^4.5|^5.0",
    "sebastian/phpcpd": "^2.0",
    "squizlabs/php_codesniffer": "^2.0"
  },
  "suggest": {
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Tify\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Tify\\Tests\\": "tests/Tify"
    }
  },
  "bin": [
  ],
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "php-lint": "php -l src & php -l tests",
    "phpcs": "phpcs --standard=PSR2 src tests",
    "phpcs-lint": "php-cs-fixer fix --dry-run --verbose",
    "phpcpd": "phpcpd src",
    "phpmd": "phpmd src text unusedcode,naming,design,controversial,codesize",
    "phpmetrics": "phpmetrics --failure-condition='average.maintainabilityIndex < 50' src",
    "phpmetrics-report": "phpmetrics --report-html=build/metrics/index.html --offline src",
    "phpunit": "phpunit",
    "phpunit-coverage": "phpunit --coverage-html build/coverage",
    "phpunit-clover": "phpunit --coverage-clover build/logs/clover.xml",
    "humbug": "humbug",
    "qa": [
      "@php-lint",
      "@phpcs",
      "@phpcs-lint",
      "@phpcpd",
      "@phpmd",
      "@phpmetrics"
    ],
    "reports": [
      "@phpmetrics-report",
      "@phpunit-coverage"
    ],
    "fix": "php-cs-fixer fix --verbose",
    "security": "composer outdated",
    "test": [
      "@php-lint",
      "@phpunit",
      "@humbug"
    ]
  }
}
